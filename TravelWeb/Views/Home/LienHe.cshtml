<div class="container background-white">
    <style>
        #map_canvas {
            height: 300px;
            width: 100%;
        }
    </style>
    @*?sensor=false*@
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBkNUdav5528mHPTWY3sAhawZgPfm2iqk0&callback=initMap">

    </script>
    <script>
        function initialize() {
            var myLatlng = new google.maps.LatLng(10.805619, 106.715759);
            var mapOptions = {
                zoom: 15,
                center: myLatlng
            };

            var map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);

            var contentString = "<table><tr><th>Công ty du lịch Việt</th></tr><tr><td>Địa chỉ: 36/26 D2, phường 25, Q.Bình Thạnh</td></tr></table>";

            var infowindow = new google.maps.InfoWindow({
                content: contentString
            });

            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: 'Địa Chỉ'
            });
            infowindow.open(map, marker);
        }
        google.maps.event.addDomListener(window, 'load', initialize);
    </script>


    @*Map canvas*@
    <div class="map" id="map_canvas" style="width:100%; height:450px;">

    </div>
    </div>